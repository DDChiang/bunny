<p id="notice"><%= notice %></p>

<p>
  <strong>User name:</strong>
  <%= @member.user_name %>
</p>

<p>
  <strong>First:</strong>
  <%= @member.first %>
</p>

<p>
  <strong>Last:</strong>
  <%= @member.last %>
</p>

<p>
  <strong>Occupation:</strong>
  <%= @member.occupation %>
</p>

<% if current_member == @member || current_member.try(admin) %>
<%= link_to 'Edit', edit_member_path(@member) %> |
<% end %>
<%= link_to 'View Other Members', members_path %>

<h2>Recipes</h2>
<% @member.recipes.each do |recipe| %>
  <div>
    <%= link_to recipe.name, recipe %>
  </div>
<% end %>
